<% layout('layout') %>

<form class="form-horizontal" method="post" action="/ROOM_ADMIN">
    <div class="form-group">
        <label for="insert-name" class="col-sm-3 control-label" style="color: #ffffff">ROOMNAME</label>

        <div class="col-xs-3">
            <input type="text" class="form-control" name="insert_name" placeholder="insert ">
        </div>
    </div>

    <div class="form-group">
        <label for="insert-game" class="col-sm-3 control-label" style="color: #ffffff">Game</label>

        <div class="col-xs-4">
            <select class="form-control" id="insert_game" name="insert_game">
                <option value="select">select</option>
                <option value="roms/Bubble Bobble.nes">Bubble Bobble</option>
                <option value="roms/Contra.nes">Contra</option>
                <option value="roms/Donkey Kong.nes">Donkey Kong</option>
                <option value="roms/Mario Bros.nes">Mario Bros</option>
                <option value="roms/Mega Man.nes">Mega Man</option>
                <option value="roms/Super Mario Bros3.nes">Super Mario Bros3</option>
            </select>
        </div>
    </div>


    <div class="form-group">
        <label for="insert-player" class="col-sm-3 control-label" style="color: #ffffff">1P / 2P</label>

        <div class="col-xs-4">
            <select class="form-control" id="insert_player" name="insert_player">
                <option value="select">select</option>
                <option value="1">1P</option>
                <option value="2">2P</option>
            </select>
        </div>
    </div>

    <br/>
    <br/>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>