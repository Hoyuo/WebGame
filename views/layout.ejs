<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src='http://code.jquery.com/jquery-2.1.3.min.js'></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0-wip/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0-wip/css/bootstrap.min.css">
    <link rel='stylesheet' type='text/css' href='stylesheets/style.css'/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <style>
        body {
            padding: 100px 0px 0px 0px;
            background: #000080 fixed;
            webkit-font-smoothing: antialiased;
            font-family: emu;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: emu;
            -webkit-font-smoothing: antialiased;
        }

        hr {
            margin-top: 20px;
            margin-bottom: 20px;
            border: 0;
            border-top: 1px solid #AAA;
        }

        * {
            font-family: emu;
        }
    </style>

</head>

<body>
<div style="padding-left: 50px; padding-right: 50px">
    <div class="navbar navbar-default navbar-fixed-top" style="background-color: #000080; min-width: 1000px">
        <a class="navbar-brand" href='/' style="margin-left: 15px; color:#FFF; font-family:emu; width:300px"> Old Game</a>
        <ul class="nav navbar-nav pull-right" style="margin:4px; width:500px">
            <% if(login == 'login'){ %>
            <font color="white">Welcome, <%= username %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</font>
            <a href="/LOGOUT" class="btn btn-primary navbar-btn btn-small"
               style="height:30px; background-color: #000080">Logout</a>
            <% }else{ %>
            <% } %>
        </ul>
    </div>

    <center>
    <div style="background: #000080; width:1000px; height:auto">
        <div style="margin-top: 10px; padding-left: 10px; padding-right: 10px">
            <div style="width:100%; height:16px"></div>

            <%- body %>

            <br/>
            <div style="width:100%; height:5px"></div>
            <hr/>

            <font color=#FFF>
                <center>Samsung Software Membership</center>
            </font>

            <div style="width:100px; height:20px"></div>
        </div>
    </div>
    </center>

    <center>
    <div style="height:15px; background-color:#ffffff; width:1000px"></div>
    </center>
</div>
</body>

</html>

